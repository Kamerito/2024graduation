                display: none !important;
            }

            .sp {
                display: block !important;
                height: 40vh;
                text-align: center;
                margin: auto;
            }

            button[type="submit"] {
                padding: 10px 20px;
                background-color: #36BAC4;
                color: #fff;
                border: none;
                border-radius: 5px;
                cursor: pointer;
            }

            button[type="submit"]:hover {
                background-color: #3697c4;
            }


        }



        @media screen and (min-width: 769px) {

            body {
                background-image: url('/public/pc-back.webp');
                background-repeat: repeat-y;
                background-size: contain;
            }

            .pc {
                display: block !important;
                height: 40vh;
                text-align: center;
                margin: auto;
            }

            .sp {
                display: none !important;
            }

            .substitute-text {
                display: none;
            }

            button[type="submit"] {
                padding: 10px 20px;
                background-color: #fcbcc4;
                color: #fff;
                border: none;
                border-radius: 5px;
                cursor: pointer;
            }

            button[type="submit"]:hover {
