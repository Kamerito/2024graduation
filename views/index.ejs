                <div id="stream">
                    <iframe src="https://player.vimeo.com/video/652210410?h=db0f59b4b5&title=0&byline=0&portrait=0" width="640" height="360" frameborder="0" allow="autoplay; fullscreen; picture-in-picture" allowfullscreen></iframe>
                 </div>

                <div id="board">
                    <h2>Board</h2>
                    <div>
                        <% comments.forEach(comment=> { %>
                            <h4>
                                <%= comment.content %>
                            </h4>
                            <% }); %>
                    </div>
                    <form action="/addComment" method="post">
                        <label for="comment"></label>
                        <input type="text" name="content" required>
                        <button type="submit">投稿する</button>
                    </form>
                </div>
            </div>
        </div>


        <div id="news">
            <h2>News</h2>
            <div>
